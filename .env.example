# API Keys
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic_api_key
TAVILY_API_KEY=your-tavily-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# Home Assistant
HASS_URL=http://homeassistant.local:8123
HASS_TOKEN=your-hass-long-lived-token

# Server
AXNMIHN_API_KEY=your-api-key
HOST=0.0.0.0
PORT=8001
DEBUG=false
TZ=America/Vancouver

# Memory budgets (tokens)
MEMORY_WORKING_BUDGET=4000
MEMORY_LONG_TERM_BUDGET=2000
MEMORY_SESSION_ARCHIVE_BUDGET=1000
MEMORY_TIME_CONTEXT_BUDGET=500

# Providers
DEFAULT_LLM_PROVIDER=gemini
SEARCH_PROVIDER=tavily

# TTS Configuration
TTS_SERVICE_URL=http://127.0.0.1:8002  # Set to enable TTS process isolation
TTS_SYNTHESIS_TIMEOUT=30.0
TTS_FFMPEG_TIMEOUT=10.0
TTS_QUEUE_MAX_PENDING=3
TTS_IDLE_TIMEOUT=300  # Seconds before unloading idle TTS model

# Admin
AXNMIHN_ADMIN_EMAIL=admin@example.com
